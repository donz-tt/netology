- hosts: myhosts
  tasks: 
    - name: Download Apache Kafka Source files
      ansible.builtin.get_url:
        url: https://dlcdn.apache.org/kafka/4.0.0/kafka-4.0.0-src.tgz
        dest: /home/$USERNAME/ansible

- hosts: myhosts
  tasks:
    - name: Unpack downloaded files
      ansible.builtin.unarchive:
        src: https://dlcdn.apache.org/kafka/4.0.0/kafka-4.0.0-src.tgz
        dest: /home/$USERNAME/ansible/kafka
        remote_src: yes

- hosts: myhosts
  tasks:
      - name: Install Tuned
        become: yes
        apt:
          name: tuned
          state: latest
          update_cache: yes
      - name: Starting and enabling service
        service:
          name: tuned
          state: started
          enabled: yes



  vars:
    motd_message: "Have a nice day!"
  become: yes
  tasks:
  - name: Change motd
    ansible.builtin.copy:
      content: "{{ motd_message }}"
      dest: /etc/motd
  



  vars:
    - motd_message: "Have a nice day!"
  become: yes
  tasks:
  - name: Change motd
    ansible.builtin.copy:
      content: "{{ motd_mess }} \n Your IP {{ ansible_all_ipv4_addresses }} \n hostname {{ ansible_hostname }}"
      dest: /etc/motd
